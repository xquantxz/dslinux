#!/bin/sh
# $Id: gauge0-input-fd 1469 2006-10-23 20:59:34Z stsp $
# modified "gauge0" script to use "--input-fd" option.
: ${DIALOG=dialog}

exec 3<&0
PCT=10
(
sleep 1
while test $PCT != 110
do
echo "XXX"
echo $PCT
echo "The new\n\
message ($PCT percent)"
echo "XXX"
PCT=`expr $PCT + 10`
sleep 1
done
) |

$DIALOG --title "GAUGE" --input-fd 3 --gauge "Hi, this is a gauge widget" 0 0 0

exec 3<&-
