#!/bin/sh
# $Id: gauge3 1469 2006-10-23 20:59:34Z stsp $
: ${DIALOG=dialog}

(
sleep 1
for n in 0 1 2 3 4 5 4 3 2 1 0
do
PCT=`expr $n \* $n \* 4`
echo "XXX"
echo $PCT
echo "The new\n\
message ($PCT percent)"
echo "XXX"
sleep 1
done
) |

$DIALOG --title "GAUGE" --gauge "Hi, this is a gauge widget" 10 70 0
